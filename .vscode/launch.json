  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run: Producer",
      "type": "java",
      "request": "launch",
      "mainClass": "com.example.producer.ProducerServiceApplication"
    },
    {
      "name": "Run: Consumer",
      "type": "java",
      "request": "launch",
      "mainClass": "com.example.consumer.ConsumerServiceApplication"
    },
    {
      "type": "java",
      "name": "Current File",
      "request": "launch",
      "mainClass": "${file}"
    }
  ],
  "compounds": [
    {
      "name": "Run Both Services",
      "configurations": ["Run: Producer", "Run: Consumer"],
      "preLaunchTask": "Build All"
    }
  ]
}
